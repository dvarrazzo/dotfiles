[color]
    ui = auto

[alias]
    ap = add -p
    br = branch
    ca = commit --amend
    can = commit --amend --no-edit
    ci = commit
    co = checkout
    cp = cherry-pick
    dc = diff --cached
    df = diff
    l1 = log --oneline
    lo = log --oneline
    lf = log --name-only
    ln = log --name-only
    loog = log --pretty=fuller
    # Needed as git < 2.14 doesn't have pull --autostash
    pr = -c rebase.autoStash=true pull --rebase
    pus = push
    rc = rebase --continue
    rh = reset HEAD
    ri = rebase --interactive --autostash
    rv = remote -v
    sm = submodule
    st = status

[core]
    excludesfile = ~/.gitignore

[init]
    templatedir = ~/.git_template

[push]
    default = simple

[gui]
    fontui = -family Ubuntu -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Liberation Mono\" -size 8 -weight normal -slant roman -underline 0 -overstrike 0
[advice]
	ignoredHook = false
