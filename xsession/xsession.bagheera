#!/bin/bash

function run {
    APP=$1;
    DELAY=$2;

    (
        if [ -n "$DELAY" ]; then
            sleep $DELAY;
        fi

        exec "$APP"
    ) &
}

gnome-settings-daemon &

run nm-applet
run bluetooth-applet
run indicator-cpufreq 1
run indicator-multiload 2
run indicator-weather 3
run caffeine 4

eval `gnome-keyring-daemon`
exec /usr/bin/awesome
